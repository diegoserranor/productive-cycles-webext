{
  "manifest_version": 2,
  "name": "Productive Cycles",
  "version": "0.0.8",

  "description": "Timer that keeps track of completed productivity cycles; it also sends break reminders",
  "homepage_url": "https://github.com/diegoserranor/productive-cycles",
  "icons": {
    "16": "icons/progress-16.png",
    "48": "icons/progress-48.png",
    "128": "icons/progress-128.png",
    "512": "icons/progress-512.png"
  },

  "browser_action": {
    "default_icon": "icons/progress-512.png",
    "default_title": "Productive Cycles",
    "default_popup": "popup/timer.html"
  },

  "background": {
    "scripts": ["Timer.js", "background-timer.js"]
  },

  "permissions": ["notifications", "storage", "idle"]
}
