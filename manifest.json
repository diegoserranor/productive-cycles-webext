{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "homepage_url": "https://github.com/diegoserranor/productive-cycles",
  "version": "0.0.9",
  "default_locale": "en",

  "icons": {
    "16": "icons/productive-cycles-16.png",
    "48": "icons/productive-cycles-48.png",
    "128": "icons/productive-cycles-128.png",
    "512": "icons/productive-cycles-512.png"
  },

  "browser_action": {
    "default_title": "__MSG_appName__",
    "default_icon": "icons/productive-cycles-512.png",
    "default_popup": "views/popup/popup.html"
  },

  "background": {
    "scripts": ["js/timer.js", "js/background.js"]
  },

  "permissions": ["notifications", "storage", "idle"]
}
