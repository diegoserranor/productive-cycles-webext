{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "homepage_url": "http://diegoserrano.me/productive-cycles",
  "version": "0.1.0",
  "default_locale": "en",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "512": "icons/icon-512.png"
  },

  "browser_action": {
    "default_title": "__MSG_appName__",
    "default_icon": "icons/icon-512.png",
    "default_popup": "views/timer/timer.html"
  },

  "background": {
    "scripts": ["background-scripts/timer.js", "background-scripts/background.js"]
  },

  "permissions": ["notifications", "storage", "idle"]
}
